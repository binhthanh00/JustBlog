@using FA.JustBlog.ViewModels.Posts
@model IEnumerable<GetAllPostViewModel>

@{
    var message = TempData["Message"] as string;
}


@{
    ViewBag.Title = "View";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section styles{
    <!-- Datepicker CSS -->
    <link rel="stylesheet" href="~/Areas/Asset/css/bootstrap-datetimepicker.min.css" />

    <!-- Datatables CSS -->
    <link rel="stylesheet"
          href="~/Areas/Asset/plugins/datatables/datatables.min.css" />
}

<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col">
                <h3 class="page-title">Quản lý tin tức</h3>
            </div>
            <div class="col-auto">
                <a href="@Url.Action("Create", "ManagePost")"
                   class="btn btn-primary ml-3">
                    <i class="fas fa-plus"></i> Thêm tin tức
                </a>
            </div>
        </div>
    </div>
    <!-- /Page Header -->
    <!-- Start alert -->
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <div style="display: none" id="deletee" class="alert alert-danger text-center" role="alert"></div>
        </div>
        <div class="col-4"></div>

    </div>
    <!-- End alert -->

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-center mb-0 datatable">
                            <thead>
                                <tr>
                                    <th>Mã</th>
                                    <th>Tiêu đề</th>
                                    <th>Mô tả ngắn</th>
                                    <th>Ngày tạo</th>
                                    <th class="text-right">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ShortDescription)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ViewCount)</td>
                                    <td class="text-right">
                                        <a href="@Url.Action("Details","ManagePost",new {id = item.Id})"
                                           class="btn btn-sm bg-primary-light mr-2">
                                            <i class="far fa-eye mr-1"></i>Chi tiết
                                        </a>
                                        <a href="@Url.Action("Update","ManagePost",new {id = item.Id})"
                                           class="btn btn-sm bg-primary-light mr-2">
                                            <i class="far fa-edit mr-1"></i>Sửa
                                        </a>

                                        <a href="@Url.Action("Delete","ManagePost",new {id = item.Id})"
                                           class=" btn btn-sm bg-danger-light mr-2 delete_review_comment">
                                            <i class="far fa-trash-alt mr-1"></i>Xóa
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>