@using FA.JustBlog.ViewModels.Categories
@model CategoryViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content container-fluid">
    <div class="row">
        <div class="col-xl-8 offset-xl-2">
            <div class="page-header">
                <div class="row">
                    <div class="col">
                        <h3 class="page-title">Bạn có chắc chắn muốn xóa không?</h3>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <form method="post" action="@Url.Action("Delete", "ManageCategory")" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>Tên danh mục</label>:
                            @Model.Name
                        </div>
                        <div class="form-group">
                            <label>Url Slug</label>:
                            @Model.UrlSlug
                        </div>
                        <div class="form-group">
                            <label for="">Mô tả </label>:
                            @Model.Description
                        </div>
                        <div class="mt-4">
                            <button class="btn btn-primary" type="submit">
                                Xóa
                            </button>
                            <a href="@Url.Action("Index","ManageCategory")" class="btn btn-link">Huỷ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}

